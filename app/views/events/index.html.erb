<div class="mdl-grid">
  <p id="notice" class="mdl-cell mdl-cell--12-col"><%= notice %></p>

  <h1 class="mdl-cell mdl-cell--12-col">イベント一覧</h1>




  <% @events.each do |event| %>
  <div class="mdl-cell mdl-cell--4-col">
    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand" style="background:
  url(<%= image_url("#{event.id}.jpg") %>) bottom right 15% no-repeat #46B6AC;
">
        <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--12-col">
        <h2 class="mdl-card__title-text"><%= event.name %></h2>
        </div>
        <div class="mdl-cell mdl-cell--12-col">開催日時:<%= event.date.strftime("%Y年%m月%d日%H時%M分") %></div>
      </div>
      </div>
      <div class="mdl-card__supporting-text">
        販売枚数:<%= event.ticket_count %>　(カテゴリ:<%= event.category %>)
      </div>
      <div class="mdl-card__actions mdl-card--border">
      <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--4-col">
        <%= button_to("Show", event, method: :get, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
        </div>
        <div class="mdl-cell mdl-cell--4-col">
        <%= button_to('Destroy', event, method: :delete, data: { confirm: 'Are you sure?'}, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
        </div>
        <div class="mdl-cell mdl-cell--4-col">
        <%= button_to('Edit', edit_event_path(event), method: :get, class: "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect") %>
        </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<br>




<%= link_to 'New Event', new_event_path %>
