
  <p id="notice"><%= notice %></p>
  <h2 class="mdl-cell mdl-cell--12-col">イベント詳細</h2>

  <!-- Wide card with share menu button -->
  <style>
    .demo-card-wide.mdl-card {
      width: 512px;
    }
    .demo-card-wide > .mdl-card__title {
      color: #111111;
      height: 230px;
      background-color: #CEF9DC;
    }
    .demo-card-wide > .mdl-card__menu {
      color: #fff;
    }
  </style>

  <style>
    .mdl-card__supporting-text {
      color: #FF0000;
    }
  </style>

  <div class="demo-card-wide mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col">
    <div class="mdl-card__title">
      <div class="mdl-grid">
        <!-- <h2 class="mdl-card__title-text">イベント詳細</h2> -->
        <p class="mdl-cell mdl-cell--12-col">
          <strong>開催日時:</strong>
          <%= @event.date %>
        </p>

        <p class="mdl-cell mdl-cell--12-col">
          <strong>イベント名:</strong>
          <%= @event.name %>
        </p>

        <p class="mdl-cell mdl-cell--12-col">
          <strong>カテゴリ:</strong>
          <%= @event.category %>
        </p>

        <p class="mdl-cell mdl-cell--12-col">
          <strong>チケット枚数:</strong>
          <%= @event.ticket_count %>
        </p>

      </div>
    </div>

  </div>


  <div class="mdl-cell mdl-cell--12-col">
    <p>
      ※ チケットの残り枚数<%= @left %>枚(<%= @event.name %>)
    </p>

<% if @left > 0 %>
    <p><%= link_to('予約する', new_reservation_path(event_id: @event.id), class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect") %></p>
<% else %>
    <p>完売しました</p>
<% end %>
    <%= link_to '戻る', root_path %>
    
  </div>
</div>
